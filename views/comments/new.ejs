<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Comments to <%= campground.name %></h1>
		<div style="width: 30%; margin: 50px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Text"></div>
				<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block" type="submit" name="button">Submit</button></div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>

	</div>
</div>

